@require ('../color.styl')

:scope
  > div
    position relative
    font-size 1rem
    font-weight 400
    line-height 1.5
    height: 1.5rem
    user-select none
    border 1px solid #ccc
    border-radius .25rem
    margin .3rem 0
    overflow hidden

  .bar
    position relative
    height: 1.5rem
    background-color #ddd

    span
      display block
      width 100%
      text-align center
