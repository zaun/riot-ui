:scope
  h1, h2, h3, h4, h5, h6
    margin-bottom .5rem
    font-family inherit
    font-weight 500
    line-height 1.1
    color: inherit

  h1
    font-size: 2.5rem;

  h2
    font-size: 2rem;

  h3
    font-size: 1.75rem;

  h4
    font-size: 1.5rem;

  h5
    font-size: 1.25rem;

  h6
    font-size: 1rem;

scope:not(:first-child)
  margin-top 3rem
