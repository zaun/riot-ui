:scope
  display inline-block
  box-sizing border-box
  width 100%
  height 100%
  padding 2px
  margin .3rem 0
  color #55595c
  background-color #fff
  background-image none
  border 1px solid #ccc
  border-radius .25rem

  input
    display block
    box-sizing border-box
    width 100%
    height 100%
    border 0
    padding .375rem .75rem
    font-size 1rem
    line-height 1.5
    outline none

    &:focus
      outline none

:scope[size="sm"]
  input
    padding .25rem .75rem
    font-size .875rem
    line-height 1.5
    border-radius .2rem

:scope[size="lg"]
  input
    padding .75rem 1.25rem
    font-size 1.25rem
    line-height 1.333333
    border-radius .3rem

:scope[data-disabled="true"]
  background-color $color-disabled

  input
    cursor not-allowed
    opacity .65
