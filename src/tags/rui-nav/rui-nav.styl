:scope
    display block
    box-sizing border-box
    width 100%
    height 4em

  .navbar
    position absolute
    background-color black
    top 0
    left 0
    width 100%
    height 4em

  .navbar-spacer
    display block
    position relative
    box-sizing border-box
    width 100%
    height 4em

:scope[fixed]
  .navbar
    position fixed
    z-index 9999
