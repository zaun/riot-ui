@require ('../color.styl')

:scope
  display inline-block
  padding .375rem 1rem
  font-size 1rem
  font-weight 400
  line-height 1.5
  text-align center
  white-space nowrap
  vertical-align middle
  cursor pointer
  user-select none
  border 1px solid #ccc
  border-radius .25rem
  margin .3rem 0
  touch-action manipulation
  text-transform none

:scope:active
:scope[data-active="true"]
  border-color darken(#ccc, 35%)

:scope:not([data-disabled="true"]):hover
  border-color darken(#ccc, 20%)

:scope[size="sm"]
  padding .25rem .75rem
  font-size .875rem
  line-height 1.5
  border-radius .2rem

:scope[size="lg"]
  padding .75rem 1.25rem
  font-size 1.25rem
  line-height 1.333333
  border-radius .3rem



